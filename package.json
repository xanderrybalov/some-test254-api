{
  "name": "some-test254-api",
  "version": "1.0.0",
  "description": "Node.js API for movies management with OMDB integration by Olexandr Rybalov",
  "main": "dist/server.js",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "tsx src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate:up": "node-pg-migrate up --migrations-dir src/db/migrations",
    "migrate:down": "node-pg-migrate down --migrations-dir src/db/migrations",
    "migrate:create": "node-pg-migrate create --migrations-dir src/db/migrations",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": ["movies", "api", "omdb", "postgresql", "express"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^5.0.0",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "node-pg-migrate": "^7.0.2",
    "zod": "^3.22.4",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "pino": "^8.16.2",
    "pino-http": "^8.5.1",
    "dotenv": "^16.3.1",
    "undici": "^6.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.10.7",
    "@types/cors": "^2.8.16",
    "@types/compression": "^1.7.5",
    "@types/supertest": "^6.0.2",
    "typescript": "^5.3.2",
    "tsx": "^4.6.2",
    "vitest": "^1.0.4",
    "supertest": "^6.3.3",
    "pino-pretty": "^10.2.3",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "prettier": "^3.1.0"
  }
}
